{% extends 'base.html.twig' %}

{% block title %}AboutUs{% endblock %}

{% block body %}
    <h1>AboutUs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ about_us.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ about_us.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ about_us.description }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <ul>
                    {% for feature  in about_us.features %}
                        <li>
                            <strong>{{ feature.title}}:</strong> 
                            <p> {{ feature.description }}</p>
                        </li>
                    {% else %}
                    <strong> No features listed </strong>
                    {% endfor %}
                </ul>        
            </tr>
            <tr>
                <th>ContactNumber</th>
                <td>{{ about_us.contactNumber }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ about_us.image }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ about_us.Email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ about_us.Address }}</td>
            </tr>
            <tr>
                <th>Links</th>
                <td>
                    <ul>
                        {% for Links  in about_us.links %}
                            <li>
                                <strong>{{ Links.title}}:</strong> 
                                <p> {{ Links.url }}</p>
                            </li>
                        {% else %}
                        <strong> No link listed </strong>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_administrator_about_us_index') }}">back to list</a>

    <a href="{{ path('app_administrator_about_us_edit', {'id': about_us.id}) }}">edit</a>

    {{ include('administrator/about_us/_delete_form.html.twig') }}
{% endblock %}
