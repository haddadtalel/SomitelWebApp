{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Service</h6>
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Icon</th>
                        <th>FullDescription</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for service in services %}
                    <tr>
                        <td>{{ service.id }}</td>
                        <td>{{ service.title }}</td>
                        <td>{{ service.description }}</td>
                        <td>
                            <div class="service-item bg-secondary rounded d-flex flex-column align-items-center text-center position-relative">
                                <div class="service-icon">
                                    <i class="{{ service.icon }}"></i>
                                </div>
                            </div>
                        </td>
                        <td>{{ service.fullDescription }}</td>
                        <td>
                            <a href="{{ path('app_administrator_service_show', {'id': service.id}) }}">show</a>
                            <a href="{{ path('app_administrator_service_edit', {'id': service.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_administrator_service_new') }}">Create new</a>
        </div>            
</div>

{% endblock %}
