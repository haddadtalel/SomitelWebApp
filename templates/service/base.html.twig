                </div>
            </div>
        </div>
    </div>
<!-- Topbar End -->
<!-- Navbar & Carousel Start -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg px-5 py-3 py-lg-0 
    {% if app.request.attributes.get('_route') == 'app_service_index' %} navbar-dark bg-dark {% else %} navbar-light {% endif %} small-nav">
                <h1 class="m-0">SOMITEL</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="{{ path('app_home') }}" class="nav-item nav-link active">Home</a>
                    <a href="#about" class="nav-item nav-link">About</a>
                    <a href="#Service" class="nav-item nav-link">Services</a>
                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>
                <button type="button" class="btn text-primary ms-3" data-bs-toggle="modal" data-bs-target="#searchModal">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </nav>
    </div>
<!-- Navbar & Carousel end -->
<!-- Service Detail -->
<div class="service-detail">
  <div class="heading">
    <div class="container">
      <div class="row d-flex justify-content-center text-center">
        <div class="col-lg-8">
          <h1 class="animate__animated animate__fadeInDown">Service Details</h1>
          <p class="mb-0 animate__animated animate__fadeIn">
            Discover our top-notch services that cater to your needs. Our team is dedicated to delivering exceptional solutions with professionalism and efficiency.
          </p>
        </div>
      </div>
    </div>
  </div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li class="current">Service Details</li>
      </ol>
    </div>
  </nav>
</div>
<!-- End Service Detail -->

<!-- Service Details Section -->
<section id="service-details" class="service-details section">
    <div class="container">
      <div class="row gy-5">
        <!-- Left Column - Service List -->
        <div class="col-lg-4">
          <div class="service-box">
            <h4>Services List</h4>
            <div class="services-list">
              {% for service in services %}
                <a href="" data-id="{{ service.id }}" class="service-link">
                  <i class="bi bi-arrow-right-circle"></i>
                  <span>{{ service.title }}</span>
                </a>
              {% endfor %}
            </div>
          </div>
        </div>
  
        <!-- Right Column - Service Details -->
        <div class="col-lg-8 ps-lg-5 fade show" id="service-details-content">
          <h3 class="animate__animated animate__fadeInUp" id="service-title">Select a service to view details</h3>
          <p class="animate__animated animate__fadeIn" id="service-description">
            Click on a service to see the full details.
          </p>
        </div>
      </div>
    </div>
  </section>
<!-- End Service Details Section -->

<!-- End Service Detail -->
  
