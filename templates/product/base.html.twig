<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{% block title %}SOMITEL{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">


    <!-- Google Fonts -->
   <link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Rubik:wght@400;500;600;700&display=swap" rel="stylesheet">

   <!-- Icon Font Stylesheet -->
   <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="{{asset('BaseStyle/lib/owlcarousel/assets/owl.carousel.min.css')}}" rel="stylesheet" type="text/css">
    <link href="{{asset('BaseStyle/lib/animate/animate.min.css')}}" rel="stylesheet" type="text/css">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{asset('BaseStyle/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css">

    <!-- Template Stylesheet -->
    <link href="{{asset('BaseStyle/css/style.css')}}" rel="stylesheet" type="text/css">
    <link href="{{asset('BaseStyle/css/product.css')}}" rel="stylesheet" type="text/css">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner"></div>
    </div>
    <!-- Spinner End -->


    <!-- Topbar Start -->
    <div class="container-fluid bg-dark px-5 d-none d-lg-block">
        <div class="row gx-0">
            <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <small class="me-3 text-light"><i class="fa fa-map-marker-alt me-2"></i>
                        {{ aboutUs.address }}</small>
                    <small class="me-3 text-light"><i class="fa fa-phone-alt me-2"></i>
                        {{ aboutUs.contactNumber }}</small>
                    <small class="text-light"><i class="fa fa-envelope-open me-2"></i>
                        {{ aboutUs.email }}</small>
                </div>
            </div>
            <div class="col-lg-4 text-center text-lg-end">
                <div class="d-inline-flex align-items-center" style="height: 45px;">
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-facebook-f fw-normal"></i></a>
                    <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href=""><i class="fab fa-linkedin-in fw-normal"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar & Carousel Start -->
    <section id="product-nav" class="product-nav">
        <div class="container-fluid position-relative p-0">
            <nav class="navbar navbar-expand-lg px-5 py-3 py-lg-0 
        {% if app.request.attributes.get('_route') == 'app_product_index' %} navbar-dark bg-dark {% else %} navbar-light {% endif %} small-nav">
            <a href="{{path('app_home')}}" class="navbar-brand p-0">
                <h1 class="m-0">SOMITEL</h1>
            </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a href="{{ path('app_home') }}" class="nav-item nav-link active">Home</a>
                        <a href="#about" class="nav-item nav-link">About</a>
                        <a href="#Service" class="nav-item nav-link">Services</a>
                        <a href="contact.html" class="nav-item nav-link">Contact</a>
                    </div>
                    <button type="button" class="btn text-primary ms-3" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </nav>
        </div>
    </section>
<!-- Navbar & Carousel end -->
    
<!-- Product Head -->
<section id="product-head" class="product-head section">
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
                <h5 class="fw-bold text-primary text-uppercase">Our Products</h5>
                <h1 class="mb-0">Professional IT Solutions & Security Systems</h1>
            </div>

        <!-- Breadcrumb Navigation -->
        <nav class="product-breadcrumbs">
            <div class="container">
                <ol>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li class="current">Products</li>
                </ol>
            </div>
        </nav>
    </div>
</section>
<!-- End Product Head -->


<!-- Products Section -->
<section id="products-detail" class="products-detail section">   
        <div class="container-fluid py-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="container">
                <div class="row">
                    <!-- Filter Sidebar -->
                    <div class="category-scroller">
                        <div class="d-flex gap-3 align-items-center overflow-x-auto pb-2">
                            {% for category in [
                                'Networking Equipment',
                                'PABX & Telephony', 
                                'Fire Safety Solutions',
                                'Security & Access Control',
                                'Networking Accessories',
                                'Power & Electrical Solutions'
                            ] %}
                                <button type="button" 
                                        class="btn btn-link text-nowrap p-0 border-0 category-filter {% if loop.first %}active{% endif %}" 
                                        data-filter="{{ category|lower|replace({' ': '-'}) }}">
                                    {{ category }}
                                </button>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="filter-box bg-light p-4 mb-5 wow slideInUp" data-wow-delay="0.2s">
    
                            <h4 class="text-primary mb-4">Price Range</h4>
                            <div class="mb-4">
                                <input type="range" class="form-range price-filter" min="0" max="10000" id="priceRange">
                                <div class="d-flex justify-content-between mt-2">
                                    <span class="text-primary">$0</span>
                                    <span class="text-primary">$10,000</span>
                                </div>
                            </div>
    
                            <h4 class="text-primary mb-4">Brands</h4>
                            <div class="mb-4">
                                {% for brand in ['Avaya', 'Hikvision', 'Dahua', 'Aruba', 'Legrand', 'Extreme Networks'] %}
                                <div class="d-flex align-items-center mb-2">
                                    <input class="form-check-input brand-filter" type="checkbox" value="{{ brand }}" id="brand{{ loop.index }}">
                                    <label class="form-check-label" for="brand{{ loop.index }}">
                                        {{ brand }}
                                    </label>
                                </div>
                                {% endfor %}
                            </div>
    
                            <button class="btn btn-primary w-100" id="applyFilters">Apply Filters</button>
                        </div>
                    </div>
    
                    <!-- Products Grid -->
                    <div class="col-lg-9">
                        <div class="row g-4" id="product-list">
                            {% for product in products %}
                            <div class="col-md-6 col-lg-4 product-item" data-category="{{ product.category }}" data-brand="{{ product.brand }}" data-price="{{ product.price }}">
                                <div class="product-card bg-light rounded d-flex flex-column align-items-center text-center">
                                    <div class="product-image mb-4">
                                        <img src="{{ product.imageUrl ?: asset('img/maintenance.jpeg') }}" class="img-fluid rounded" alt="{{ product.name }}">
                                    </div>
                                    <div class="px-4 pb-4">
                                        <h4 class="mb-3">{{ product.name }}</h4>
                                        <div class="d-flex justify-content-between mb-3">
                                            <span class="text-primary fw-bold">${{ product.price|number_format(2, '.', ',') }}</span>
                                            <span class="badge {{ product.stockQuantity > 0 ? 'bg-success' : 'bg-danger' }}">
                                                {{ product.stockQuantity > 0 ? 'In Stock' : 'Out of Stock' }}
                                            </span>
                                        </div>
                                        <p class="text-muted mb-0">{{ product.brand }}</p>
                                        <p class="mb-4">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                                        <a class="btn btn-lg btn-primary rounded" href="{{ path('app_product_show', {'id': product.id}) }}">
                                            <i class="bi bi-arrow-right"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {% else %}
                            <div class="col-12">
                                <div class="alert alert-info text-center">
                                    <i class="bi bi-info-circle me-2"></i> No products found.
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
    <!-- End Products Section -->

<!-- Footer Start -->
    <div class="container-fluid bg-dark text-light mt-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-4 col-md-6 footer-about">
                    <div class="d-flex flex-column align-items-center justify-content-center text-center h-100 bg-light p-4" 
     style="margin-left: -50px; width: calc(100% + 50px); height: calc(100% - 50px);">
    <iframe style="border:0; width: 100%; height: 270px;" 
            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d48389.78314118045!2d-74.006138!3d40.710059!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a22a3bda30d%3A0xb89d1fe6bc499443!2sDowntown%20Conference%20Center!5e0!3m2!1sen!2sus!4v1676961268712!5m2!1sen!2sus" 
            frameborder="0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
    </iframe>
</div>

                    
                </div>

                <div class="col-lg-8 col-md-6">
                    <div class="row gx-5">
                        <div class="col-lg-4 col-md-12 pt-5 mb-5">
                            <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                <h3 class="text-light mb-0">Get In Touch</h3>
                            </div>
                            <div class="d-flex mb-2">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <p class="mb-0">{{ aboutUs.address }}</p>
                            </div>
                            <div class="d-flex mb-2">
                                <i class="bi bi-envelope-open text-primary me-2"></i>
                                <p class="mb-0">{{ aboutUs.email }}</p>
                            </div>
                            <div class="d-flex mb-2">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                <p class="mb-0">{{ aboutUs.contactNumber }}</p>
                            </div>
                            <div class="d-flex mt-4">
                                <a class="btn btn-primary btn-square me-2" href="#"><i class="fab fa-facebook-f fw-normal"></i></a>
                                <a class="btn btn-primary btn-square me-2" href="#"><i class="fab fa-linkedin-in fw-normal"></i></a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                            <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                <h3 class="text-light mb-0">Quick Links</h3>
                            </div>
                            <div class="link-animated d-flex flex-column justify-content-start">
                                <a class="text-light mb-2" href="#"><i class="bi bi-arrow-right text-primary me-2"></i>Home</a>
                                <a class="text-light mb-2" href="#about"><i class="bi bi-arrow-right text-primary me-2"></i>About Us</a>
                                <a class="text-light mb-2" href="#Service"><i class="bi bi-arrow-right text-primary me-2"></i>Our Services</a>
                                <a class="text-light" href="#Quote"><i class="bi bi-arrow-right text-primary me-2"></i>Quote</a>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                            <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                <h3 class="text-light mb-0">Popular Links</h3>
                            </div>
                            <div class="link-animated d-flex flex-column justify-content-start">
                                <a class="text-light mb-2" href="{{path('app_home')}}"><i class="bi bi-arrow-right text-primary me-2"></i>Home</a>
                                <a class="text-light mb-2" href="#About"><i class="bi bi-arrow-right text-primary me-2"></i>About Us</a>
                                <a class="text-light mb-2" href="#Service"><i class="bi bi-arrow-right text-primary me-2"></i>Our Services</a>
                                <a class="text-light" href="#"><i class="bi bi-arrow-right text-primary me-2"></i>Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid text-white" style="background: #061429;">
        <div class="container text-center">
            <div class="row justify-content-end">
                <div class="col-lg-8 col-md-6">
                    <div class="d-flex align-items-center justify-content-center" style="height: 75px;">
                        <p class="mb-0">&copy; <a class="text-white border-bottom" href="#">SOMITEL</a>. All Rights Reserved. 
						
						
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{asset('BaseStyle/lib/wow/wow.min.js')}}"></script>
    <script src="{{asset('BaseStyle/lib/easing/easing.min.js')}}"></script>
    <script src="{{asset('BaseStyle/lib/waypoints/waypoints.min.js')}}"></script>
    <script src="{{asset('BaseStyle/lib/counterup/counterup.min.js')}}"></script>
    <script src="{{asset('BaseStyle/lib/owlcarousel/owl.carousel.min.js')}}"></script>

    <!-- Template Javascript -->
    <script src="{{asset('BaseStyle/js/main.js')}}"></script>
    <script src="{{asset('BaseStyle/js/collapse.js')}}"></script>
    <script src="{{asset('BaseStyle/js/product.js')}}"></script>
</body>

</html>