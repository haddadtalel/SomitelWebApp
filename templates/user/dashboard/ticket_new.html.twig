{% extends 'user/dashboard/base.html.twig' %}

{% block title %}New Support Ticket - SOMITEL{% endblock %}

{% block content %}
<div class="row g-4">
    <div class="col-12">
        <div class="bg-light rounded p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Create New Support Ticket</h2>
                <a href="{{ path('app_user_tickets') }}" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-2"></i> Back to Tickets
                </a>
            </div>
            
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.subject, 'Subject') }}
                    {{ form_widget(form.subject) }}
                    {{ form_errors(form.subject) }}
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.category, 'Category') }}
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.priority, 'Priority') }}
                        {{ form_widget(form.priority) }}
                        {{ form_errors(form.priority) }}
                    </div>
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-paper-plane me-2"></i> Submit Ticket
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
