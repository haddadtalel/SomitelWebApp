{% extends 'index.html.twig' %}
{% block body %}
        <section id="hero">
            <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="w-100" src="{{asset('BaseStyle/img/avaya-hear_bg.jpg')}}" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 900px;  ">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">Creative & Innovative</h5>
                                <h1 class="display-1 text-white mb-md-4 animated zoomIn">Creative & Innovative Digital Solution</h1>
                                <a href="{{path('app_product_index')}}" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Products</a>
                                <a href="{{path('app_quote')}}" class="btn btn-outline-light py-md-3 px-md-5 animated slideInRight">Contact Us</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="w-100" src="{{asset('BaseStyle/img/armoire.webp')}}" alt="Image" >
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 900px;">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">Creative & Innovative</h5>
                                <h1 class="display-1 text-white mb-md-4 animated zoomIn">Creative & Innovative Digital Solution</h1>
                                <a href="{{path('app_product_index')}}" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Products</a>
                                <a href="{{path('app_quote')}}" class="btn btn-outline-light py-md-3 px-md-5 animated slideInRight">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    <!-- Navbar & Carousel End -->
    </section>
<section id="search">
    <!-- Full Screen Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content" style="background: rgba(9, 30, 62, .7);">
                <div class="modal-header border-0">
                    <button type="button" class="btn bg-white btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center justify-content-center">
                    <div class="input-group" style="max-width: 600px;">
                        <input type="text" class="form-control bg-transparent border-primary p-3" placeholder="Type search keyword">
                        <button class="btn btn-primary px-4"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Full Screen Search End -->
</section>

    <!-- Facts Start -->
    <section id="facts">
        <div class="container-fluid facts py-5 pt-lg-0">
            <div class="container py-5 pt-lg-0">
                <div class="row gx-0">
                    {% for achivment in achivments %}
                        <div class="col-lg-4 wow zoomIn" data-wow-delay="{{ loop.index * 0.2 }}s">
                            <div class="{{ achivment.backgroundColor }} shadow d-flex align-items-center justify-content-center p-4" style="height: 150px;">
                                <div class="bg-white d-flex align-items-center justify-content-center rounded mb-2" style="width: 60px; height: 60px;">
                                    <i class="fa {{ achivment.iconClass }} text-primary"></i>
                                </div>
                                <div class="ps-4">
                                    <h5 class="{{ achivment.textColor }} mb-0">{{ achivment.name }}</h5>
                                    <h1 class="{{ achivment.textColor }} mb-0" data-toggle="counter-up">{{ achivment.count }}</h1>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
<section id="About"> 
    <!-- About Start -->
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-7">
                    <div class="section-title position-relative pb-3 mb-5">
                        <h5 class="fw-bold text-primary text-uppercase">About Us</h5>
                        <h1 class="mb-0">{{ aboutUs.title }}</h1>
                    </div>
                    <p class="mb-4">{{ aboutUs.description }}</p>
                    <div class="row g-0 mb-3">
                        {% for column in aboutUs.features|batch(2) %}
                            <div class="col-sm-6 wow zoomIn" data-wow-delay="{{ 0.2 * loop.index }}s">
                                {% for feature in column %}
                                    <h5 class="mb-3">
                                        <i class="fa fa-check text-primary me-3"></i>
                                        {{ feature.title }}
                                    </h5>
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="d-flex align-items-center mb-4 wow fadeIn" data-wow-delay="0.6s">
                        <div class="bg-primary d-flex align-items-center justify-content-center rounded" style="width: 60px; height: 60px;">
                            <i class="fa fa-phone-alt text-white"></i>
                        </div>
                        <div class="ps-4">
                            <h5 class="mb-2">Call to ask any question</h5>
                            <h4 class="text-primary mb-0">{{ aboutUs.contactNumber }}</h4>
                        </div>
                    </div>
                    <a href="{{path('app_quote')}}" class="btn btn-primary py-3 px-5 mt-3 wow zoomIn" data-wow-delay="0.9s">Request A Quote</a>
                </div>
                <div class="col-lg-5" style="min-height: 500px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="{{asset ('BaseStyle/img/about.jpg')}}" style="object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
</section>



<!-- Services Section -->

<section id="Service">
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
                <h5 class="fw-bold text-primary text-uppercase">Our Services</h5>
                <h1 class="mb-0">Custom IT Solutions for Your Successful Business</h1>
            </div>
            <div class="row g-5">
                {% for service in services %}
                    <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.{{ loop.index * 2 }}s">
                        <div class="service-item bg-light rounded d-flex flex-column align-items-center text-center position-relative">
                            <a href="" class="stretched-link"></a> 
                            <div class="service-icon">
                                <i class="{{ service.icon }}"></i>
                            </div>
                            <h4 class="mb-3 px-2">{{ service.title }}</h4>
                            <p class="m-0 px-3">{{ service.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>


    <!-- Service End -->





    <!-- Vendor Start -->
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5 mb-5">
            <div class="bg-white">
                <div class="owl-carousel vendor-carousel">
                    <img src="{{ asset('BaseStyle/img/Avaya.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/Briticom.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/legrand_logo.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/extremenetworks_logo.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/Dahua.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/Hikvision.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/Aruba.png')}}" alt="">
                    <img src="{{ asset('BaseStyle/img/uniview-logo.png')}}" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor End -->
   
{% endblock %}